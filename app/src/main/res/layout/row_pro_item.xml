<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.github.siyamed.shapeimageview.CircularImageView
    android:layout_width="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="100dp"
    android:id="@+id/iv_pro_image"
    app:siBorderWidth="5dp"
    app:siBorderColor="#00f"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_pro_iname"
            android:typeface="monospace"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:typeface="monospace"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:text="market price:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_pro_mprice"
                android:typeface="monospace"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:typeface="monospace"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:text="web price:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_pro_wprice"
                android:typeface="serif"
                android:textColor="#0000ff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:typeface="monospace"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:text="Avalability:"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pro_availabilty"
            android:typeface="serif"
            android:textColor="#0000ff"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
