<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2d785"
    android:layout_height="match_parent">

    <TextView
        android:textSize="30dp"
        android:background="@drawable/list_sector"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="DELIVERY ADDRESS"
        android:textStyle="bold"
        android:textColor="#2cdc32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="EMAIL_ID"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
        android:id="@+id/mail"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0f0ff2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="ADDRESS"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0f0ff2"
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="PIN"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pin"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0f0ff2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="LANDMARK"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lmark"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0f0ff2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="CITY"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/city"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0f0ff2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="STATE"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/state"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0f0ff2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="PHONE_No."
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/phno"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0f0ff2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#333534"
            android:text="CLICK TO CHANGE"
            android:background="@drawable/list_sector"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>


</LinearLayout>
