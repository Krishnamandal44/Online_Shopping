<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#78788f"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".List_View_Show">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#00d"
            android:layout_height="30dp">
                <Button
                    android:id="@+id/bt_back"
                    android:background="@drawable/back"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                        <Button
                            android:id="@+id/bt_home"
                            android:layout_gravity="center"
                            android:layout_marginLeft="290dp"
                            android:background="@drawable/home"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lv"
                    android:layout_width="match_parent"
                    android:background="#cfaec7"
                    android:layout_height="match_parent">
                </ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:text="Product Total="/>

                <TextView
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:background="@android:color/holo_orange_light"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#083239"
            android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/rs"
                    android:layout_width="20dp"
                    android:scaleType="centerCrop"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/total"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#c8c8e7"
                    android:layout_width="20dp"
                    android:layout_height="60dp" />
                <Button
                    android:id="@+id/bt_buy"
                    android:text="Buy"
                    android:background="#59e7e5"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_width="20dp"
                    android:layout_height="60dp" />


        </LinearLayout>




</LinearLayout>
